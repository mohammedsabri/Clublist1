<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
  android:elevation="24dp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/gradient_background"
      android:padding="8dp">

    <TextView
        android:id="@+id/edt_clublist_title"
        android:layout_width="203dp"
        android:layout_height="63dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Clublist Title"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edt_details"
        android:layout_width="139dp"
        android:layout_height="47dp"
        android:layout_toRightOf="@+id/imageIcon"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="4dp"
        android:text="@string/hint_clublistDetails"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_clublist_title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="4dp"
        android:text="@string/hint_clublistValue"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_details"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="146dp"
        android:layout_height="103dp"
        android:layout_margin="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>